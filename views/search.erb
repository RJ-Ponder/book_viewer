<h2 class="content-subhead">Search</h2>

<form action="/search" method="get">
  <input name="query" value="<%= params[:query] %>">
  <button type="submit">Search</button>
</form>

<% unless params[:query].nil? || params[:query] == '' %>
  <% if @results.empty? %>
    <p>Sorry, no matches were found.</p>
  <% else %>
    <h2 class="content-subhead">Results for '<%= params[:query] %>'</h2>
      <ul>
        <% @results.each do |chapter| %>
          <li>
            <%= chapter[:name] %>
            <ul>
              <% chapter[:matched_paragraphs].each do |para_hash| %>
                <li>
                  <a href="/chapters/<%= chapter[:number] %>#para<%= para_hash.keys.first %>"><%= bold_search(para_hash.values.first, params[:query]) %></a>
                </li>
              <% end %>
            </ul>
          </li>
        <% end %>
      </ul>
  <% end %>
<% end %>